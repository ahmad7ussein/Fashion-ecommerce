{
  "info": {
    "name": "StyleCraft API",
    "description": "Complete API collection for StyleCraft Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/register"}
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"admin@stylecraft.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/login"}
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/auth/me"}
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/products"}
          }
        },
        {
          "name": "Get Products with Filters",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/products?category=T-Shirts&gender=Men&season=Summer"}
          }
        },
        {
          "name": "Get Single Product",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/products/:id"}
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Product\",\n  \"price\": 49.99,\n  \"image\": \"/product.jpg\",\n  \"category\": \"T-Shirts\",\n  \"gender\": \"Men\",\n  \"season\": \"Summer\",\n  \"style\": \"Plain\",\n  \"occasion\": \"Casual\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/products"}
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"name\": \"Classic White Tee\",\n      \"price\": 29.99,\n      \"quantity\": 2,\n      \"size\": \"M\",\n      \"color\": \"White\",\n      \"image\": \"/white-t-shirt.png\",\n      \"isCustom\": false\n    }\n  ],\n  \"shippingAddress\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"phone\": \"1234567890\",\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zip\": \"10001\",\n    \"country\": \"USA\"\n  },\n  \"paymentInfo\": {\n    \"method\": \"card\",\n    \"status\": \"completed\"\n  },\n  \"subtotal\": 59.98,\n  \"tax\": 5.40,\n  \"shipping\": 10.00,\n  \"total\": 75.38\n}"
            },
            "url": {"raw": "{{baseUrl}}/orders"}
          }
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/orders/my-orders"}
          }
        },
        {
          "name": "Get All Orders (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/orders"}
          }
        }
      ]
    },
    {
      "name": "Designs",
      "item": [
        {
          "name": "Create Design",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Custom Design\",\n  \"baseProduct\": {\n    \"type\": \"t-shirt\",\n    \"color\": \"white\",\n    \"size\": \"M\"\n  },\n  \"elements\": [\n    {\n      \"id\": \"text-1\",\n      \"type\": \"text\",\n      \"content\": \"Hello World\",\n      \"x\": 100,\n      \"y\": 100,\n      \"width\": 200,\n      \"height\": 50,\n      \"rotation\": 0,\n      \"fontSize\": 24,\n      \"color\": \"#000000\"\n    }\n  ],\n  \"price\": 39.99,\n  \"status\": \"draft\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/designs"}
          }
        },
        {
          "name": "Get My Designs",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/designs/my-designs"}
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/admin/dashboard/stats"}
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/admin/users"}
          }
        },
        {
          "name": "Get Sales Report",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/admin/reports/sales"}
          }
        }
      ]
    }
  ]
}

